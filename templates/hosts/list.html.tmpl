{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h2>Hosts</h2>
            </div>
        </div>
    </div>

    {{ range $host := .Hosts }}
    <div class="row">
        <div class="col-xs-12 col-lg-12">
            <div>
                <h3>{{ $host.Name }}</h3>
            </div>

            {{ range $tag := $host.StringTags }}
            <span class="label label-primary">{{ $tag }}</span>
            {{ end }}

            <div>
                {{ printf "%s" $host.Data }}
            </div>

        </div>
    </div>
    {{ end }}

</div>
{{end}}