{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Hosts</h1>
            </div>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Hostname</th>
                        <th>Tags</th>
                        <th>JSON</th>
                    </tr>
                </thead>

                <tbody>
                {{ range $host := .Hosts }}
                    <tr>
                        <td>{{ $host.Name }}</td>
                        <td>{{ printf "%s" $host.Tags }}</td>
                        <td>{{ printf "%s" $host.Data }}</td>
                    </tr>
                {{ end }}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{end}}