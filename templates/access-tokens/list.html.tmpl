{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <button class="btn btn-primary pull-right" type="button" data-toggle="modal" data-target="#new-access-token-modal">New Access Token</button>
                <h1>Access Tokens</h1>
            </div>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Token</th>
                        <th>Level</th>
                        <th>Enabled</th>
                    </tr>
                </thead>

                <tbody>
                {{ range $accessToken := .AccessTokens }}
                    <tr>
                        <td>{{ $accessToken.ID }}</td>
                        <td>{{ $accessToken.Token }}</td>
                        <td>{{ $accessToken.Level }}</td>
                        <td>
                            <form action="/access-tokens/{{ $accessToken.ID }}/enable-disable">
                                <input type="checkbox" name="Enabled" checked>
                            </form>
                        </td>
                    </tr>
                {{ end }}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- New Access Token Modal -->
<div class="modal fade" id="new-access-token-modal" tabindex="-1" role="dialog" aria-labelledby="new-access-token-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="new-access-token-label">New Access Token</h4>
      </div>

      <form method="post" action="/access-tokens">

        <div class="modal-body">
          <div class="form-group">
            <label class="control-label" for="level">Access Level:</label>

            <select id="level" class="form-control" name="Level">
                <option value="read">Read</option>
                <option value="write">Write</option>
                <option value="execute">Execute</option>
            </select>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="$(this).closest('form').submit()">Create</button>
        </div>

      </form>

    </div>
  </div>
</div>
{{end}}